<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout

    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="match_parent"
    >

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Type in below field"
        android:id="@+id/l2_tv1"
        android:layout_alignParentTop="true"
        android:padding="20dp"
        />
    
    <EditText
        android:id="@+id/l2_et1"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:hint="Enter Anything"
        android:layout_below="@+id/l2_tv1"
        android:layout_margin="20dp"
        />
    <Button
        android:textColor="@color/white"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/l2_b1"
        android:layout_below="@+id/l2_et1"
        android:layout_marginTop="40dp"
        android:text="Toast Text of Above Field"
        android:background="@color/colorPrimary"
        android:padding="20dp"
        android:layout_margin="20dp"

        />
    <Button
        android:textColor="@color/white"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/l2_b2"
        android:layout_below="@+id/l2_b1"
        android:text="Simple toast Display"
        android:onClick="showMsg"
        android:background="@color/colorAccent"
        android:layout_marginTop="80dp"
        android:layout_margin="80dp"
        android:padding="10dp"
        />
    <Button
        android:textColor="@color/white"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/l2_gohome"
        android:layout_below="@+id/l2_b2"
        android:text="Go Back"
        android:background="@color/colorPrimary"
        android:layout_marginTop="20dp"
        android:layout_margin="30dp"
        android:padding="10dp"
        />
</RelativeLayout>